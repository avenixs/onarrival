<%- include("includes/head.ejs") %>
</head>

<body onload="showModal()">
    <%- include("includes/navigation.ejs") %>

    <% if(!(success==null)) { %>
        <div class="modal fade" id="requestSentConf" tabindex="-1" role="dialog" aria-labelledby="reqSentLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reqSentLabel"><%- (success=='true') ? "Request sent" : "Error while sending a request" %></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <img src="/media/icons/<%= (success=='true') ? 'tick.png' : 'error.png' %>" alt="Tick Icon" >
                    <p><%- (success=='true') ? "You have successfully submitted a contact request. We will be in touch with your company shortly." : "There has been an error while sending a request! Please try again or contact the support" %></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
    <% } %>
    
    <div id="request">
        <div class="transparent-form">
            <h2 class="title-decor" style="text-align: center;">Contact Form</h2>
            <small>Provide us with some details and we will contact your employer with a special offer for our services.</small>
            <form action="/contact/request" method="POST" style="margin-top: 2rem">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="companyName">Name of the Company</label>
                        <input type="text" class="form-control" id="companyName" name="companyName" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="companyEmail">Office Email Address</label>
                        <input type="text" class="form-control" id="companyEmail" name="companyEmail" required>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="companyTel">Office Telephone Number</label>
                        <input type="text" class="form-control" id="companyTel" name="companyTel" placeholder="07411223344" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="adminName">Your Managers's First Name</label>
                        <input type="text" class="form-control" id="mgrName" name="mgrName" placeholder="You can leave it blank...">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="adminDep">Your Department</label>
                        <input type="text" class="form-control" id="mgrDep" name="mgrDep" placeholder="You can leave it blank...">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="positionDescription">Position Description</label>
                        <textarea class="form-control" name="positionDescription" id="positionDescription" row="4" required></textarea>
                        <small>Please let us know a bit more about your current position, language requirements and your needs that we could accommodate.</small>
                    </div>
                </div>
                <div class="form-row">
                    <button type="submit" class="btn btn-dark" style="margin: 0 auto;">Send</button>
                </div>
            </form>
        </div>
    </div>

    <footer class="stick-bottom" id="page-footer">(c) Damian Wojtunik 2020, Icons by&nbsp;<a href="https://freeicons.io/profile/730" target="_blank">Anu Rocks</a></footer>

    <%- include("includes/end.ejs") %>

    <script>
        function showModal() {
            $("#requestSentConf").modal("show");
        };
    </script>

</body>
</html>