<%- include("../includes/head.ejs") %>
</head>

<body onload="showModal()">
    <%- include("../includes/navigation-panel.ejs") %>

    <% if(!(success==null)) { %>
        <div class="modal fade" id="userAdded" tabindex="-1" role="dialog" aria-labelledby="userAddedLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="userAddedLabel"><%= (success=='true') ? "Success" : "Error occurred!" %></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <img src="/media/icons/<%= (success=='true') ? 'tick.png' : 'error.png' %>" alt="Tick Icon" >
                    <p><%= (success=='true') ? "You have successfully added a new member of your team, a course leader." : "There has been an error while adding a user! Please try again or contact the support" %></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
    <% } %>
    
    <div class="main-panel">

        <%- include("../includes/left-bar.ejs") %>

        <div class="course-content">
            <div class="transparent-form" id="panel-form">
                <h2 class="title-decor">Add a Course Leader</h2>
                <form action="/enterprise/leaders/add" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="name">Course Leader's Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="surname">Course Leader's Surname</label>
                            <input type="text" class="form-control" id="surname" name="surname" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="dep">Department</label>
                            <input type="text" class="form-control" id="dep" name="dep" required>
                        </div>
                    </div>
                    <div class="form-row" id="email-row">
                        <div class="form-group col-md-4">
                            <label for="email">Course Leader's Email</label>
                            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="pass">Password</label>
                            <input type="password" class="form-control" id="pass" name="pass" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="adminRights">Admin Privilages</label>
                            <select class="form-control" id="adminRights" name="adminRights" required>
                                <option value="0" selected>No</option>
                                <option value="1">Yes</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <button type="submit" class="btn btn-dark" style="margin: 0 auto;" id="add-btn" disabled>Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="stick-bottom" id="page-footer">(c) Damian Wojtunik, Language on Arrival 2020</footer>

    <%- include("../includes/end.ejs") %>

    <script src="/scripts/add-leader.js"></script>

</body>
</html>