<%- include("../includes/head.ejs") %>
</head>

<body>
    <%- include("../includes/navigation-panel.ejs") %>
    
    <%- include("../includes/left-bar-admin.ejs") %>

    <div class="course-content">
        <div class="transparent-form">
            <h2 class="title-decor">Add a Representative</h2>
            <form action="/register" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="adminName">Representative's Name</label>
                        <input type="text" class="form-control" id="adminName" name="adminName">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="adminSurname">Representative's Surname</label>
                        <input type="text" class="form-control" id="adminSurname" name="adminSurname">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="adminDep">Department</label>
                        <input type="text" class="form-control" id="adminDep" name="adminDep">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="adminRights">Admin Privilages</label>
                        <select class="form-control" id="adminRights" name="adminRights">
                            <option value="0" selected>No</option>
                            <option value="1">Yes</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="adminEmail">Representative's Email</label>
                        <input type="email" class="form-control" id="adminEmail" name="adminEmail" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="adminPassword">Password</label>
                        <input type="password" class="form-control" id="adminPassword" name="adminPassword">
                        <small id="passEightChar" class="form-text">At least 8 characters!</small>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="repeatPassword">Repeat Password</label>
                        <input type="password" class="form-control" id="repeatPassword" name="repeatPassword">
                        <small id="passMatch" class="form-text">Passwords do not match!</small>
                    </div>
                </div>
                <div class="form-row">
                    <button type="submit" class="btn btn-dark" id="register-button" disabled>Add</button>
                </div>
            </form>
        </div>
    </div>

    <footer class="stick-bottom" id="page-footer">(c) Damian Wojtunik, Language on Arrival 2020</footer>

    <%- include("../includes/end.ejs") %>

    <script type="text/javascript" src="/scripts/registration-script.js"></script>

</body>
</html>