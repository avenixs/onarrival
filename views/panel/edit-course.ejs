<%- include("../includes/head.ejs") %>
</head>

<body>
    <%- include("../includes/navigation-panel.ejs") %>
    
    <div class="main-panel">

        <%- include("../includes/left-bar.ejs") %>

        <div class="course-content">
            <div class="transparent-form" id="panel-form">
                <h2 class="title-decor">Edit a Course</h2>
                <form action="/enterprise/courses/edit/<%= course.id %>" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="title">Course Title <span style='color: #8F0C0C'>&#8727;</span></label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= course.title %>" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="language">Course Language <span style='color: #8F0C0C'>&#8727;</span></label>
                            <input type="text" class="form-control" id="language" name="language" value="<%= course.mainLanguage %>" required>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="diff">Difficulty <span style='color: #8F0C0C'>&#8727;</span></label>
                            <select class="form-control" id="diff" name="diff" required>
                                <option value="Beginner" <%- course.difficulty=="Beginner" ? 'selected' : '' %> >Beginner</option>
                                <option value="Intermediate" <%- course.difficulty=="Intermediate" ? 'selected' : '' %> >Intermediate</option>
                                <option value="Advanced" <%- course.difficulty=="Advanced" ? 'selected' : '' %> >Advanced</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="description">Course Description <span style='color: #8F0C0C'>&#8727;</span></label>
                            <textarea class="form-control" name="description" id="description" row="6" placeholder="Describe in a few words what the course will involve and whom it will address..." required><%= course.description %></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <button type="submit" class="btn btn-success" style="margin: 0 auto;">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="stick-bottom" id="page-footer">(c) Damian Wojtunik, Language on Arrival 2020</footer>

    <%- include("../includes/end.ejs") %>

    <script src="/scripts/common.js"></script>

</body>
</html>