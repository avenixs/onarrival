<body>
    <%- include("../includes/navigation-panel.ejs") %>
    
    <%- include("../includes/student-bar.ejs") %>

    <div class="course-content" id="vocab-choice">
        <% for(let i=0; i<vocabEx.length; i++) { %>
            <div>
                <a href="learn/<%= vocabEx[i].id %>">
                    <figure class="function-button">
                        <img src="/media/icons/abcd.png" class="figure-img img-fluid rounded" alt="Learn">
                        <figcaption class="figure-caption"><%= vocabEx[i].name %></figcaption>
                        <small><%= vocabEx[i].description %></small>
                    </figure>
                </a>
            </div>
        <% }; %>
    </div>

