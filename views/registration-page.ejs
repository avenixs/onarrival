<%- include("includes/head.ejs") %>
</head>

<body>
    <%- include("includes/navigation.ejs") %>
    
    <div id="registration-page">
        <div class="transparent-form">
            <h2 class="title-decor">Register a Company</h2>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="companyName">Company's name</label>
                        <input type="text" class="form-control" id="companyName" name="companyName">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="companyEmail">Office email</label>
                        <input type="text" class="form-control" id="companyEmail" name="companyEmail">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="companyTel">Office telephone</label>
                        <input type="text" class="form-control" id="companyTel" name="companyTel" placeholder="07411223344">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="adminEmail">Representative's Email</label>
                        <input type="email" class="form-control" id="adminEmail" name="adminEmail" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="adminPassword">Password</label>
                        <input type="password" class="form-control" id="adminPassword" name="adminPassword">
                        <small id="passEightChar" class="form-text">At least 8 characters!</small>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="repeatPassword">Repeat Password</label>
                        <input type="password" class="form-control" id="repeatPassword" name="repeatPassword">
                        <small id="passMatch" class="form-text">Passwords do not match!</small>
                    </div>
                </div>
                <div class="form-row">
                    <button type="submit" class="btn btn-dark" id="register-button" disabled>Register</button>
                </div>
            </form>
        </div>
    </div>

    <footer class="stick-bottom" id="page-footer">(c) Damian Wojtunik 2020, Icons by&nbsp;<a href="https://freeicons.io/profile/730" target="_blank">Anu Rocks</a></footer>

    <%- include("includes/end.ejs") %>

    <script type="text/javascript" src="/scripts/registration-script.js"></script>

</body>
</html>